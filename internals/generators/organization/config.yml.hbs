---
name: "{{name}}"
slug: "{{slug}}"
settings:
  mobile_phone_verification: {{mobile_phone_verification}}

# configuration variables for the server app
server:
  # URL to openwisp-radius
  host: "{{openwisp_radius_url}}"
  proxy_urls:
    password_change: "/api/v1/{org_slug}/account/password/change"
    password_reset: "/api/v1/{org_slug}/account/password/reset"
    password_reset_confirm: "/api/v1/{org_slug}/account/password/reset/confirm"
    registration: "/api/v1/{org_slug}/account"
    user_auth_token: "/api/v1/{org_slug}/account/token"
    validate_auth_token: "/api/v1/{org_slug}/account/token/validate"
    authorize: "/api/v1/authorize"
    user_radius_sessions: "/api/v1/{org_slug}/account/session"
    create_mobile_phone_token: "/api/v1/{org_slug}/account/phone/token"
    verify_mobile_phone_token: "/api/v1/{org_slug}/account/phone/verify"
    mobile_phone_number_change: "/api/v1/{org_slug}/account/phone/change"
  uuid: "{{uuid}}"
  secret_key: "{{secret_key}}"
  timeout: 2 #request timeout period in seconds

# configuration variables for the client
# Path of all the assets should be defined relative to the organization's folder
# in assets directory.
client:
  # <title> value
  title: "Wifi Login"

  auto_login: True

  # path of favicon
{{#if assets_confirm}}
  favicon: "favicon.png"
{{else}}
  favicon: null
{{/if}}

  # path of the custom css file relative to organization's folder in
  # assets directory.
{{#if assets_confirm}}
  css_path: "index.css"
{{else}}
  css_path: null
{{/if}}
  languages:
    - text: "english"
      slug: "en"
  default_language: "en"
  components:
    header:
      logo:
{{#if assets_confirm}}
        url: "openwisp-logo-black.svg" # logo url
        alternate_text: "{{name}}"
{{else}}
        url: null # logo url
        alternate_text: "{{name}}"
{{/if}}
      links:
        - text:
            en: "Sign In" #link text in english
          url: "/{{slug}}/login"
          authenticated: false
        - text:
            en: "Sign Up"
          url: "/{{slug}}/registration"
          authenticated: false
        - text:
            en: "Status"
          url: "/{{slug}}/status"
          authenticated: true
        - text:
            en: "Change password"
          url: "/{{slug}}/change-password"
          authenticated: true
      {{#if mobile_phone_verification }}
        - text:
            en: "Change phone number"
          url: "/{{slug}}/change-phone-number"
          authenticated: true
      {{/if}}

    footer:
      links:
        - text: []
      # secondary text to be displayed in smaller size in next line.
      # Eg. copyright text
      secondary_text:
        en: null

    registration_form:
      input_fields:
        phone_number:
          placeholder:
            en: "mobile phone number"
          label:
            en: "mobile phone number"
          # default international prefix
          # country: "it"
          # restrict international prefixes shown
          # only_countries: ["it", "de", "uk"]
        username:
          type: "text"
          pattern: '[a-zA-Z@.+\-_\d]{1,150}'
          pattern_description:
            en: "only letters, numbers, and @/./+/-/_ characters"
          placeholder:
            en: "username"
          label:
            en: "username"
        email:
          type: "email"
          pattern: '.+@.+\..+'
          pattern_description:
            en: null
          placeholder:
            en: "email address"
          label:
            en: "email"
        password:
          type: "password"
          pattern: ".{6,}"
          pattern_description:
            en: "password must be a minimum of 6 characters"
          placeholder:
            en: "password"
          label:
            en: "password"
        password_confirm:
          type: "password"
          placeholder:
            en: "confirm password"
          label:
            en: "confirm"
        first_name:
          type: "text"
          label:
            en: "first name"
          label_optional:
            en: "first name (optional)"
          pattern: '[a-zA-Z@.+\-_\d]{1,150}'
          pattern_description:
            en: "only letters, numbers, and @/./+/-/_ characters"
          placeholder:
            en: "first name"
          setting: "disabled"
        last_name:
          type: "text"
          label:
            en: "last name"
          label_optional:
            en: "last name (optional)"
          pattern: '[a-zA-Z@.+\-_\d]{1,150}'
          pattern_description:
            en: "only letters, numbers, and @/./+/-/_ characters"
          placeholder:
            en: "last name"
          setting: "disabled"
        birth_date:
          type: "date"
          label:
            en: "birth date"
          label_optional:
            en: "birth date (optional)"
          setting: "disabled"
        location:
          type: "text"
          label:
            en: "location"
          label_optional:
            en: "location (optional)"
          pattern: '[a-zA-Z@.+\-_\d]{1,150}'
          pattern_description:
            en: "only letters, numbers, and @/./+/-/_ characters"
          placeholder:
            en: "location"
          setting: "disabled"
      buttons:
        register:
          text:
            en: "Sign up"
      additional_info_text:
        en: "By signing up, you accept the {terms_and_conditions} and the {privacy_policy} of this WiFi service. "
      links:
        login:
          en: "Already have an account? Log in"
        forget_password:
          en: "Forgot your password?"

    mobile_phone_verification_form:
      text:
        verify:
          en:
            Verify your mobile phone number ({phone_number}) by inserting the code you received via SMS below.
        resend:
          en:
            If you did not receive the verification SMS code, you can try sending it again by clicking below.
        change:
          en:
            Wrong phone number?
        token_sent:
          en:
            SMS verification code sent successfully.
        logout:
          en:
            If you need to cancel the process you can log out below.
      input_fields:
        code:
          type: "text"
          pattern: '[0-9]{6,}'
          pattern_description:
            en: "this field must be a 6 digit numeric code"
          placeholder:
            en: "enter SMS verification code"
          label:
            en: "code"
      buttons:
        verify:
          en: "Submit"
        resend:
          en: "Send a new verification code"
        change:
          en: "Change your phone number"
        logout:
          en: "Logout"

    phone_number_change_form:
      buttons:
        change_phone_number:
          text:
            en: "Change phone number"
        cancel:
          text:
            en: "Cancel"

    password_reset_form:
      heading:
        en: "reset your password"
      additional_text:
        en: "Have you forgot your password? Enter your e-mail address below, and we'll send you an e-mail which will allow you to reset it."
      input_fields:
        email:
          type: "email"
          pattern: '.+@.+\..+'
          pattern_description:
            en: null
          placeholder:
            en: "email address"
          label:
            en: "email"
      buttons:
        send:
          en: "Reset password"
      contact_text:
        en: "Please contact us if you have any trouble resetting your password."
      login_page_link:
        text:
          en: "Go back to sign in"

    password_reset_confirm_form:
      heading:
        en: "Reset your password"
      additional_text:
        en: "Please enter your new password below."
      input_fields:
        password:
          type: "password"
          pattern: ".{6,}"
          pattern_description:
            en: "password must be a minimum of 6 characters"
          placeholder:
            en: "password"
          label:
            en: "password"
        password_confirm:
          type: "password"
          placeholder:
            en: "confirm password"
          label:
            en: "confirm"
      buttons:
        submit:
          en: "Change password"
      contact_text:
        en: "Please contact us if you have any trouble resetting your password."
      login_page_link:
        text:
          en: "Go back to sign in"

    contact_page:
      email:
        label:
          en: "E-mail"
        value:
          en: "support@openwisp.co"
      helpdesk:
        label:
          en: "Helpdesk"
        value:
          en: "+789 948 564"
{{#if assets_confirm}}
      social_links:
        - alt:
            en: "twitter"
          icon: "twitter.svg"
          url: "https://twitter.com/openwisp"
        - alt:
            en: "facebook"
          icon: "facebook.svg"
          url: "https://facebook.com/openwisp"

{{else}}
      social_links: []
{{/if}}

    status_page:
      content:
        en: |
          WiFi Login Successful!
          You can now use the internet.
          You may leave this page open in case you want to log out.
      user_info:
        status:
          text:
            en: "Status"
          value:
            en: "Logged in"
        email:
          text:
            en: "Email"
        username:
          text:
            en: "Username"
        phone_number:
          text:
            en: "Phone number"
      session_info:
        header:
          start_time:
            text:
              en: "Start time"
          stop_time:
            text:
              en: "Stop time"
          duration:
            text:
              en: "Duration"
          download:
            text:
              en: "Download"
          upload:
            text:
              en: "Upload"
          device_address:
            text:
              en: "Device address"
        settings:
          active_session:
            text:
              en: "session is active"
          date_language_locale: "en-US"
      links:
        - text:
            en: "Change your password"
          url: "/{orgSlug}/change-password/"
      buttons:
        logout:
          text:
            en: "Logout"

    login_form:
      social_login:
        links:
{{#if assets_confirm}}
          - text:
              en: "Login with Facebook"
            url: "#facebook"
            icon: "facebook.svg"
          - text:
              en: "Login with google"
            icon: "google.svg"
            url: "#google"
          - text:
              en: "Login with Twitter"
            icon: "twitter.svg"
            url: "#twitter"
{{else}}
          - text:
              en: "Login with Facebook"
            url: "#facebook"
            icon: null
          - text:
              en: "Login with google"
            icon: null
            url: "#google"
          - text:
              en: "Login with Twitter"
            icon: null
            url: "#twitter"
{{/if}}
      input_fields:
        username:
          type: "email"
          pattern: '.+@.+\..+'
          pattern_description:
            en: null
          placeholder:
            en: "email address"
          label:
            en: "email"
        password:
          type: "password"
          pattern: ".{6,}"
          pattern_description:
            en: "password must be a minimum of 6 characters"
          placeholder:
            en: "password"
          label:
            en: "password"
        remember_me:
          type: "checkbox"
          value: {{remember_me}}
          label:
            en: "remember me on this device"
      additional_info_text:
        en: "By logging in, you accept the {terms_and_conditions} and the {privacy_policy} of this WiFi service. "
      buttons:
        login:
          text:
            en: "Login"
        register:
          label:
            en: "Not registered yet?"
          text:
            en: "Sign up"
      links:
        forget_password:
          en: "Forgot your password?"

    password_change_form:
      title:
        en: "Change your password"
      input_fields:
        password1:
          type: "password"
          pattern: ".{6,}"
          pattern_description:
            en: "The new password must be a minimum of 6 characters"
          label:
            en: "new password"
          placeholder:
            en: "Enter your new password"
        password2:
          type: "password"
          label:
            en: "confirm new password"
          placeholder:
            en: "Confirm your new password"
      buttons:
        submit_button:
          text:
            en: "Change Password"

    404_page:
      heading:
        en: "404"
      sub_heading:
        en: "Not Found"
      message:
        en: "Sorry, we couldn't find the page you were looking for."
      homepage_link:
        text:
          en: "Go back to homepage"

    captive_portal_login_form:
      method: post
      action: {{login_action_url}}
      fields:
        username: auth_user
        password: auth_pass
      macaddr_param_name: macaddr
      additional_fields:
        - name: zone
          value: zone_name
        - name: redirurl
          value: http://localhost/{{slug}}/status
        - name: accept
          value: accept

    captive_portal_logout_form:
      method: post
      action: {{login_action_url}}
      fields:
        id: logout_id
      additional_fields: []
      logout_by_session: {{logout_by_session_ID}}

{{#if assets_confirm}}
  privacy_policy:
    title:
      en: "privacy policy"
    content:
      en: "privacy-en.md"
  terms_and_conditions:
    title:
      en: "terms and conditions"
    content:
      en: "terms-en.md"
{{else}}
  privacy_policy:
    title:
      en: "privacy policy"
    content:
      en: null
  terms_and_conditions:
    title:
      en: "terms and conditions"
    content:
      en: null
{{/if}}
